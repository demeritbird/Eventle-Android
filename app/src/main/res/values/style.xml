<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="profile_insightheader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">bottom</item>
    </style>


    <style name="profile_insightnumber">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:fontFamily">@font/spartan_semibold</item>
    </style>


    <!-- Recycler Views -->
    <style name="recyclerview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">28sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">?attr/actionBarSize</item>
    </style>

    <!-- Bottom Dialog -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <!-- calendar days -->
    <style name="CalendarDays">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_grey_2</item>
    </style>

    <style name="text_highlight">
        <item name="android:fontFamily">@font/spartan_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- bottom dialog eventview -->
    <style name="event_header" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:fontFamily">@font/spartan_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">Event Title</item>
        <item name="android:background">@drawable/eventcard_textbg</item>
        <item name="android:paddingLeft">8sp</item>
    </style>

    <style name="event_description" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:fontFamily">@font/spartan_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/lorem_ipsum</item>
        <item name="android:textColor">@color/dark_blue_2</item>
        <item name="android:background">@drawable/eventcard_textbg</item>
        <item name="android:paddingLeft">4sp</item>
    </style>

    <style name="event_describe" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:layout_height">22sp</item>
        <item name="android:fontFamily">@font/spartan_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="event_alert" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:layout_height">22sp</item>
        <item name="android:fontFamily">@font/spartan_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/eventcard_textbg</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="event_buttons">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_marginEnd">20sp</item>
    </style>



    <!-- main title -->
    <style name="main_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/spartan_black</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/dark_blue_1</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="entrypage_mainbutton">
        <item name="android:layout_width">216sp</item>
        <item name="android:layout_height">58sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/main_button</item>
    </style>

    <style name="calendarpage_slcbuttons">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginTop">28sp</item>
        <item name="android:background">@drawable/eventcard_viewbg</item>
    </style>

    <style name="btmfragment_optionrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="btmfragment_optionheader">
        <item name="android:layout_width">105sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="btmfragment_optioncontent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="btmfragment_privacybtns">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/eventcard_viewbg</item>
    </style>

    <style name="profileImage">
        <item name="android:layout_width">124sp</item>
        <item name="android:layout_height">124sp</item>
        <item name="android:layout_marginTop">42sp</item>
    </style>
</resources>